<div class="text-center">
  <h1>要望・お問い合わせページ</h1>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <%= form_with model: @inquiry, url: inquiries_path, local: true, class: 'form' do |form| %>
          <div class="form-group">
            <%= form.label :ユーザー名 %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
  
          <div class="form-group">
            <%= form.label :Eメール %>
            <%= form.email_field :email, class: 'form-control' %>
          </div>
  
          <div class="form-group">
            <%= form.label :要望・お問い合わせ %>
            <%= form.text_area :message, class: 'form-control' %>
          </div>
  
          <%= form.submit "送信する", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>






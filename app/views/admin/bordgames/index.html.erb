 <div class="container">
  <div class="row">
    <div class='col-md-9'>
     <h1>テーブルゲーム投稿一覧</h1>
      <% if flash[:alert] %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:alert] %>
          </div>
        <% end %>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to '最新記事',admin_bordgames_path, class: 'btn btn-success' %>
        </li>
        <li class="nav-item">
          <%= link_to '閲覧数順', admin_bord_popular_path, class: 'btn btn-info' %>
        </li>
        <li class="nav-item">
          <%= link_to admin_bord_favorite_path, class: 'btn btn-info' do %>
          <i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数順
          <% end %>
      </ul>
      <div class="tab-content">
      <div class="tab-pane active" id="latest">
      <table class='table table-hover table-inverse'>
        <thead class="thead-dark">
          <tr>
            <th></th>
            <th>ゲーム名　</th>
            <th>　　　　　　</th>
            <th>タイトル　　　</th>
            <th><i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数　</th>
            <th>閲覧数　　</th>
            <th>コメント数　　</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% if @latest_bordgames.any? %>
            <%= render 'public/bordgames/newgames' %>
          <% else %>
            <tr>
              <td colspan="8">投稿がありません。</td>
            </tr>
          <% end %>
        </tbody>
        <%= paginate @latest_bordgames, param_name: 'latest_bordgames' %>
      </table>
        </div>
      </div>
    </div>
  </div>
</div>

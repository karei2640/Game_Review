<div class="tableplat-index">
  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col">
        <h2>テーブルプラット追加</h2>
        </div>
        </div>
        <div class="row">
          <div class="col">
            <%= form_with model: @tableplat, url: admin_tableplats_path, method: :post, local: true do |f| %>
            <%= f.label :name, "プラットフォーム名" %>
            <%= f.text_field :name %>
            <%= f.submit "新規登録", class:"btn btn-primary" %>
            <% end %>
            </div>
            </div>
            <div class="row">
              <div class="col-lg-5 mt-3">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>ジャンル一覧</th>
                      <th colspan="1"></th>
                      </tr>
                      </thead>
                      <tbody>
                        <% @tableplats.each do |tableplat| %>
                        <tr>
                          <td><%= tableplat.name %></td>
                          <td><%#= link_to "編集する", edit_admin_tableplats_path(tableplat), class:"btn btn-success"%></td>
                        </tr>
                        <% end %>
                        <%#= paginate @genres %>
                      </tbody>
                </table>
             </div>
        </div>
    </div>
</div>
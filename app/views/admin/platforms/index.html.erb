<div class="platform-index">
  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col">
        <h2>タイプ追加</h2>
         <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>
        </div>
        </div>
        <div class="row">
          <div class="col">
            <%= form_with model: @platform, url: admin_platforms_path, method: :post, local: true do |f| %>
            <%= f.label :name, "タイプ名" %>
            <%= f.text_field :name %>
            <%= f.submit "新規登録", class:"btn btn-primary" %>
            <% end %>
            </div>
            </div>
            <div class="row">
              <div class="col-lg-5 mt-3">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>タイプ一覧</th>
                      <th colspan="1"></th>
                      </tr>
                      </thead>
                      <tbody>
                        <% @platforms.each do |platform| %>
                        <tr>
                          <td><%= platform.name %></td>
                          <td><%= link_to "編集する", edit_admin_platform_path(platform), class:"btn btn-success"%></td>
                        </tr>
                        <% end %>
                      </tbody>
                </table>
             </div>
        </div>
    </div>
</div>
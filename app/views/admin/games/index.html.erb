<div class="container">
  <div class="row">
    <div class='col-md-9'>
      <h1>ゲーム投稿一覧</h1>
      <% if flash[:alert] %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:alert] %>
          </div>
        <% end %>
      <ul class="nav nav-tabs">
         <li class="nav-item">
          <%= link_to '最新記事', admin_games_path, class: 'btn btn-info' %>
        </li>
        <li class="nav-item">
          <%= link_to '閲覧数順', admin_popular_path, class: 'btn btn-light' %>
        </li>
        <li class="nav-item">
          <%= link_to admin_favorite_path, class: 'btn btn-light' do %>
          <i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数順
          <% end %>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="latest">
          <table class='table table-hover table-inverse'>
            <thead class="thead-dark">
              <tr>
                <th></th>
                <th>ゲーム名　</th>
                <th></th>
                <th>タイトル　</th>
                <th><i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数　</th>
                <th>閲覧数　　</th>
                <th>コメント数　　　</th>
                <th colspan="3"></th>
              </tr>
          </thead>
          <tbody>
              <%= render 'public/games/newgames', games: @latest_games %>
            </tbody>
            <%= paginate @latest_games, param_name: 'latest_games_page' %>
          </table>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="container">
        <h1>ゲーム投稿一覧</h1>
         <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#latest">最新記事</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#popular">閲覧数順</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#favorite"><i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数順</a>
          </li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="latest">
            <table class="table table-hover">
              <thead class="thead-dark">
                <tr>
                  <th><%= paginate @latest_games %></th>
                  <th>ゲーム名</th>
                  <th>タイプ</th>
                  <th>紹介</th>
                  <th><i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数</th>
                  <th>閲覧数</th>
                  <th>コメント数</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <%= render 'public/games/newgames' %>
              </tbody>
          </table>
        </div>
        <div class="tab-pane" id="popular">
          <table class="table table-hover">
            <thead class="thead-dark">
              <tr>
                <th><%= paginate @popular_games %></th>
                <th>ゲーム名</th>
                <th>タイプ</th>
                <th>紹介</th>
                <th><i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数</th>
                <th>閲覧数</th>
                <th>コメント数</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
                <%= render 'public/games/viewgames' %>
             </tbody>
          </table>
        </div>
        <div class="tab-pane" id="favorite">
          <table class="table table-hover">
            <thead class="thead-dark">
              <tr>
                <th><%= paginate @favorite_games %></th>
                <th>ゲーム名</th>
                <th>タイプ</th>
                <th>紹介</th>
                <th><i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数</th>
                <th>閲覧数</th>
                <th>コメント数</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <%= render 'public/games/favoritegames' %>
             </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

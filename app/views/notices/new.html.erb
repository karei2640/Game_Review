<div class="container">
    <div class="col-md-8">
      <h1 class="text-center">お知らせ新規作成</h1>
      <%= form_with model: @notice, url: notices_path, local: true do |form| %>
        <div class="form-group">
          <%= form.label :カテゴリー %>
          <%= form.select :category, @categories %>
        </div>
        <div class="form-group">
          <%= form.label :タイトル %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :コメント %>
          <%= form.text_area :content, class: "form-control" %>
        </div>
        <%= form.submit "作成する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div
<div class='container px-5 px-sm-0'>
 <div class='row'>
   <div class='col-md-3'>
      <% if customer_signed_in? %>
        <h2>ユーザ情報</h2>
        <%= form_with model: @customer, url: customer_path(current_customer.id), remote: true do |f| %>
            <%= render partial: 'public/customers/info', customer: @customer %>
        <% end %>
      <% else %>
        <%= render partial: 'public/customers/guest' %>
      <% end %>
   </div>
 
  <div class='col-md-8'>
    <table class='table table-hover table-inverse'>
      <thead>
          <tr>
          <th></th>
          <th><%= link_to "最新記事", games_path(sort: "newgame") %></th>
          <th></th>
          <th></th>
          <th><%= link_to "閲覧数", games_path(sort: "viewgame") %></th>
          <th colspan="3"></th>
        </tr>
        <tr>
          <th></th>
          <th>ゲーム名</th>
          <th>タイプ</th>
          <th>紹介</th>
          <th>閲覧数</th>
          <th colspan="3"></th>
        </tr>
     </thead>
     <tbody>
    <h1>ゲーム投稿一覧</h1>
    <%= render 'newgames' %>
    <%#= render 'viewgames' %>
 </div>
 </div>
</div>
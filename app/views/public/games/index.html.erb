<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <% if customer_signed_in? %>
        <h2>ユーザ情報</h2>
        <%= form_with model: @customer, url: customer_path(current_customer.id), remote: true do |f| %>
          <%= render partial: 'public/customers/info', customer: @customer %>
        <% end %>
      <% else %>
        <%= render partial: 'public/customers/guest' %>
      <% end %>
    </div>
    <div class='col-md-9'>
      <h1>ゲーム投稿一覧</h1>
      <% if flash[:alert] %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:alert] %>
          </div>
        <% end %>
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#latest">最新記事</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#popular">閲覧数順</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#favorite"><i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数順</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="latest">
          <table class='table table-hover table-inverse'>
            <thead class="thead-dark">
              <tr>
                <th></th>
                <th>ゲーム名　</th>
                <th></th>
                <th>タイトル　</th>
                <th><i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>数　</th>
                <th>閲覧数　　</th>
                <th>コメント数　　　</th>
                <th colspan="3"></th>
              </tr>
          </thead>
          <tbody>
              <%= render 'newgames', games: @latest_games %>
            </tbody>
            <%= paginate @latest_games, param_name: 'latest_games_page' %>
          </table>
        </div>
        <div class="tab-pane fade" id="popular">
          <table class='table table-hover table-inverse'>
          <% if params[:ranking_period] == 'all' %>
            <%= render partial: 'game_ranking', locals: { games: @popular_games_all } %>
          <% elsif params[:ranking_period] == 'monthly' %>
            <%= render partial: 'game_ranking', locals: { games: @popular_games_monthly } %>
          <% elsif params[:ranking_period] == 'weekly' %>
            <%= render partial: 'game_ranking', locals: { games: @popular_games_weekly } %>
          <% else %>
            <%= render partial: 'game_ranking', locals: { games: @popular_games_daily } %>
          <% end %>
          <% if params[:ranking_period] == 'all' %>
            <%= paginate @popular_games_all, param_name: 'popular_games_all_page' %>
          <% elsif params[:ranking_period] == 'monthly' %>
            <%= paginate @popular_games_monthly, param_name: 'popular_games_monthly_page' %>
          <% elsif params[:ranking_period] == 'weekly' %>
            <%= paginate @popular_games_weekly, param_name: 'popular_games_weekly_page' %>
          <% else %>
            <%= paginate @popular_games_daily, param_name: 'popular_games_daily_page' %>
          <% end %>
          <div class="ranking-tab-nav">
            <div class="period-options">
            <ul class="nav nav-pills">
              <li class="nav-item">
                <%= link_to '全期間', request.params.merge(ranking_period: 'all'), class: "nav-link #{params[:ranking_period] == 'all' ? 'active' : ''}" %>
              </li>
              <li class="nav-item">
                <%= link_to '1か月', request.params.merge(ranking_period: 'monthly'), class: "nav-link #{params[:ranking_period] == 'monthly' ? 'active' : ''}" %>
              </li>
              <li class="nav-item">
                <%= link_to '1週間', request.params.merge(ranking_period: 'weekly'), class: "nav-link #{params[:ranking_period] == 'weekly' ? 'active' : ''}" %>
              </li>
              <li class="nav-item">
                <%= link_to '1日', request.params.merge(ranking_period: 'daily'), class: "nav-link #{params[:ranking_period].nil? || params[:ranking_period] == 'daily' ? 'active' : ''}" %>
              </li>
            </ul>
          </div>
          </table>
        </div>
        <div class="tab-pane" id="favorite">
          <table class='table table-hover table-inverse'>
            <% if params[:ranking_period] == 'all' %>
              <%= render partial: 'game_ranking', locals: { games: @favorite_games_all } %>
            <% elsif params[:ranking_period] == 'monthly' %>
              <%= render partial: 'game_ranking', locals: { games: @favorite_games_monthly } %>
            <% elsif params[:ranking_period] == 'weekly' %>
              <%= render partial: 'game_ranking', locals: { games: @favorite_games_weekly } %>
            <% else %>
              <%= render partial: 'game_ranking', locals: { games: @favorite_games_daily } %>
            <% end %>
            <% if params[:ranking_period] == 'all' %>
              <%= paginate @favorite_games_all, param_name: 'favorite_games_all_page' %>
            <% elsif params[:ranking_period] == 'monthly' %>
              <%= paginate @favorite_games_monthly, param_name: 'favorite_games_monthly_page' %>
            <% elsif params[:ranking_period] == 'weekly' %>
              <%= paginate @favorite_games_weekly, param_name: 'favorite_games_weekly_page' %>
            <% else %>
              <%= paginate @favorite_games_daily, param_name: 'favorite_games_daily_page' %>
            <% end %>
            <div class="ranking-tab-nav">
          <div class="period-options">
         <ul class="nav nav-pills">
           <li class="nav-item">
            <%= link_to '全期間', request.params.merge(ranking_period: 'all'), class: "nav-link #{params[:ranking_period] == 'all' ? 'active' : ''}" %>
          </li>
          <li class="nav-item">
            <%= link_to '1か月', request.params.merge(ranking_period: 'monthly'), class: "nav-link #{params[:ranking_period] == 'monthly' ? 'active' : ''}"  %>
          </li>
          <li class="nav-item">
            <%= link_to '1週間', request.params.merge(ranking_period: 'weekly'), class: "nav-link #{params[:ranking_period] == 'weekly' ? 'active' : ''}" %>
          </li>
          <li class="nav-item">
            <%= link_to '1日', request.params.merge(ranking_period: 'daily'), class: "nav-link #{params[:ranking_period].nil? || params[:ranking_period] == 'daily' ? 'active' : ''}"  %>
          </li>
        </ul>
        </div>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

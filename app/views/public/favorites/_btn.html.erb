<% if current_customer %>
  <% if @game.favorited_by?(current_customer) %>
    <%= link_to game_favorites_path(@game), {method: :delete, id: "favorite-#{@game.id}", remote: true} do %>
      <i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>
      <%= @game.favorites.count %> いいね
    <% end %>
  <% else %>
    <%= link_to game_favorites_path(@game), {method: :post, id: "favorite-#{@game.id}", remote: true} do %>
      <i class="far fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>
      <%= @game.favorites.count %> いいね
    <% end %>
  <% end %>
<% else %>
  <i class="fas fa-star fa-lg" aria-hidden="true" style="color: #ffa200;"></i>
  <%= @game.favorites.count %> いいね
<% end %>